{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDirs": ["./src"],
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
